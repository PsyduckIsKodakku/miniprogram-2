swiper {
  width: 100%;
  height: 614rpx;
}

swiper image {
  width: 100%;
  height: 614rpx;
}

.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top: 2rpx solid #ededed;
  border-bottom: 2rpx solid #ededed;
  padding-bottom: 10rpx;
}

.post-author-date {
  margin: 10rpx 0 20rpx 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.post-author {
  height: 60rpx;
  width: 60rpx;
  /* vertical-align: middle; */
}

.post-date {
  margin-left: 20rpx;
  /* vertical-align: middle; */
  font-size: 26rpx;
}

.post-image {
  margin-left: 20rpx;
  height: 560rpx;
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  color: #333;
}

.post-sub {
  font-size: 28rpx;
  color: #666;
  letter-spacing: 2rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}